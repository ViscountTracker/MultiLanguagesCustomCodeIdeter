<UserControl x:Class="SandboxForTasks.Views.CodeEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SandboxForTasks.Views"       
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <StackPanel>
        <TextBox Text="{Binding someTest}" Width="750" Height="400" Background="Black" Foreground="White" FontSize="14" FontFamily="Consolas">
        </TextBox>
        <Button BorderBrush="AliceBlue" 
                Background="Black"  
               Foreground="AntiqueWhite"
                Content="Execute" 
                Width="52" Height="30" 
                HorizontalAlignment="Left" 
                Margin="25 5 5 10" 
                Click="Execute_Click" />
    </StackPanel>
</UserControl>
